<UserControl x:Class="QR_Code_Generator_RPTU.Controller.Information_Field"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QR_Code_Generator_RPTU.Controller"
             mc:Ignorable="d"
             d:DesignHeight="575" d:DesignWidth="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450"/>
            <ColumnDefinition Width="750"/>
        </Grid.ColumnDefinitions>
            
        <StackPanel Grid.Column="0">
            <Label Margin="40"
                   Name="StatusLabel"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="20"
                   FontFamily="Georgia"
                   FontWeight="Heavy" x:FieldModifier="public" />
            <Canvas 
                Name="Canvas"
                Background="Gray"
                Width="400"
                Height="400"
                />
        </StackPanel>
        <Border Grid.Column="1"
                BorderBrush="SteelBlue" 
                BorderThickness="10,0,0,0"
        >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="4*"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0"
                            Name="Home"
                            Content="Home"
                            Margin="10 ,30"
                            Click="Home_OnClick"/>
                    <Button Grid.Column="1"
                            Content="Finders Pattern"
                            Margin="10 ,30"/>
                    <Button Grid.Column="2"
                            Content="alignment Pattern"
                            Margin="10 ,30"/>
                    <Button Grid.Column="3"
                            Content="Timing Pattern"
                            Margin="10 ,30"/>
                    <Button Grid.Column="4"
                            Content="generate message"
                            Margin="10 ,30"/>
                    <Button Grid.Column="5"
                            Content="Mask Pattern"
                            Margin="10 ,30"/>
                </Grid>
            </Grid>
        </Border>
        
    </Grid>
</UserControl>
