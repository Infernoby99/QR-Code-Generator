<UserControl x:Class="QR_Code_Generator_RPTU.Controller.Information_Field"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QR_Code_Generator_RPTU.Controller"
             xmlns:qrCodeGeneratorRptu="clr-namespace:QR_Code_Generator_RPTU"
             mc:Ignorable="d"
             d:DesignHeight="625" d:DesignWidth="1210">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Label Margin="40"
                   Name="StatusLabel"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="20"
                   FontFamily="Georgia"
                   FontWeight="Heavy" x:FieldModifier="public" />
            <Canvas
                Name="Canvas"
                Background="Gray"
                Width="400"
                Height="400" />
        </StackPanel>
        <Border Grid.Column="1"
                BorderBrush="SteelBlue"
                BorderThickness="10,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="4*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0"
                            FontWeight="Bold"
                            BorderBrush="SteelBlue"
                            BorderThickness="3"
                            Background="Transparent"
                            Content="intro"
                            Margin="10 ,30"
                            Tag="0"
                            Click="Generate_OnClick" />
                    <Button Grid.Column="1"
                            FontWeight="Bold"
                            BorderBrush="SteelBlue"
                            BorderThickness="3"
                            Background="Transparent"
                            Content="Finders Pattern"
                            Margin="10 ,30"
                            Tag="1"
                            Click="Generate_OnClick" />
                    <Button Grid.Column="2"
                            FontWeight="Bold"
                            BorderBrush="SteelBlue"
                            BorderThickness="3"
                            Background="Transparent"
                            Content="alignment Pattern"
                            Margin="10 ,30"
                            Tag="2"
                            Click="Generate_OnClick" />
                    <Button Grid.Column="3"
                            FontWeight="Bold"
                            BorderBrush="SteelBlue"
                            BorderThickness="3"
                            Background="Transparent"
                            Content="Timing Pattern"
                            Margin="10 ,30"
                            Tag="3"
                            Click="Generate_OnClick" />
                    <Button Grid.Column="4"
                            FontWeight="Bold"
                            BorderBrush="SteelBlue"
                            BorderThickness="3"
                            Background="Transparent"
                            Content="Nachrichten Bits"
                            Margin="10 ,30"
                            Tag="4"
                            Click="Generate_OnClick" />
                    <Button Grid.Column="5"
                            FontWeight="Bold"
                            BorderBrush="SteelBlue"
                            BorderThickness="3"
                            Background="Transparent"
                            Content="Masken"
                            Margin="10 ,30"
                            Tag="5"
                            Click="Generate_OnClick" />
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="0.5*" />
                    </Grid.ColumnDefinitions>

                    

                    <Border Grid.Column="0"
                            BorderBrush="SteelBlue"
                            BorderThickness="2,2,2,5"
                            CornerRadius="5"
                            Margin="5">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0.5, 0" EndPoint="0.5, 1">
                                <GradientStop Color="White" Offset="0.85" />
                                <GradientStop Color="SteelBlue" Offset="1.0" />
                            </LinearGradientBrush>

                        </Border.Background>
                        <RichTextBox Background="Transparent"
                                     Padding="0,20,0,0"
                                     IsReadOnly="True"
                                     BorderBrush="Transparent">
                            <FlowDocument>
                                <Paragraph FontSize="30"
                                           FontWeight="Heavy"
                                           TextAlignment="Center"
                                           Foreground="Black">
                                    <Run Name="InfoTitle" />
                                </Paragraph>
                            </FlowDocument>
                        </RichTextBox>
                    </Border>
                    
                    <Border Grid.Column="1"
                            BorderBrush="SteelBlue"
                            BorderThickness="2,2,2,5"
                            CornerRadius="5"
                            Margin="5">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0.5, 0" EndPoint="0.5, 1">
                                <GradientStop Color="White" Offset="0.85" />

                                <GradientStop Color="SteelBlue" Offset="1.0" />
                            </LinearGradientBrush>

                        </Border.Background>
                        <Button Background="Transparent"
                                Click="ToHomePage_Onclick"
                                BorderBrush="Transparent"
                        >
                            <Border BorderBrush="SteelBlue"
                                    BorderThickness="3"
                                    CornerRadius="10">

                                <Image Source="/images/icons8-zurück-48.png" Width="44" Height="44" />
                            </Border>
                        </Button>
                    </Border>
                </Grid>


                <Border Grid.Row="2"
                        x:Name = "ContextBorder"
                        BorderBrush="SteelBlue"
                        BorderThickness="3"
                        Height="400"
                        Margin="5"
                        CornerRadius="5">
                        
                </Border>
            </Grid>
        </Border>

    </Grid>
</UserControl>