<UserControl x:Class="QR_Code_Generator_RPTU.Controller.Overview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QR_Code_Generator_RPTU.Controller"
             mc:Ignorable="d"
             d:DesignHeight="95" d:DesignWidth="740">
    <Grid Background="Transparent">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    BorderBrush="SteelBlue"
                    BorderThickness="2,2,2,5"
                    CornerRadius="5"
                    Margin="0,2">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0.5, 0" EndPoint="0.5, 1">
                        <GradientStop Color="White" Offset="0.75"/>
                        
                        <GradientStop Color="SteelBlue" Offset="1.0"/>
                    </LinearGradientBrush>
                
                </Border.Background>
                <Button Background="Transparent"
                        Click="ToHomePage_Onclick">
                    <Border BorderBrush="SteelBlue"
                            BorderThickness="3"
                            CornerRadius="10">
                    
                        <Image Source="/images/icons8-zurück-48.png" Width="44" Height="44"/>
                    </Border>
                </Button>
            </Border>
            
            <Border Grid.Column="1"
                    BorderBrush="SteelBlue"
                    BorderThickness="2,2,2,5"
                    CornerRadius="5"
                    Margin="0,2">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0.5, 0" EndPoint="0.5, 1">
                        <GradientStop Color="White" Offset="0.75"/>
                        <GradientStop Color="SteelBlue" Offset="1.0"/>
                    </LinearGradientBrush>
                
                </Border.Background>
                <RichTextBox Background="Transparent"
                             Padding="0,20,0,0"
                             IsReadOnly="True"
                >
                    <FlowDocument>
                        <Paragraph FontSize="30" 
                                   FontWeight="Heavy"
                                   TextAlignment="Center" 
                                   Foreground="Black"
                        >
                            <Run Name="InfoTitle"
                                 x:FieldModifier="public" 
                            />
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
            </Border>
        </Grid>
    </Grid>
</UserControl>
