<Page x:Class="QR_Code_Generator_RPTU.Pages.Info"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:QR_Code_Generator_RPTU.Pages"
      xmlns:qrCodeGeneratorRptu1="clr-namespace:QR_Code_Generator_RPTU"
      mc:Ignorable="d"
      Title="Info" Height="650" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <qrCodeGeneratorRptu1:Title Grid.Row="0"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450"/>
                <ColumnDefinition Width="750"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <Label Margin="40"
                       Name="StatusLabel"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="20"
                       FontFamily="Georgia"
                       FontWeight="Heavy"/>
                <Canvas 
                    Name="Canvas"
                    Background="Gray"
                    Width="400"
                    Height="400"
                />
            </StackPanel>
            
             <Border Grid.Column="1" 
                    BorderBrush="SteelBlue" 
                    BorderThickness="10,0,0,0"
                    >
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="4*"/>
                    </Grid.RowDefinitions>
                    
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
