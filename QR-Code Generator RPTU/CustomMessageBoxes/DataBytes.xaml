<Window x:Class="QR_Code_Generator_RPTU.DataBytes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:QR_Code_Generator_RPTU"
        mc:Ignorable="d"
        Title="DataBytes" Height="700" Width="250">
    <Grid>
        <StackPanel>
            <Label FontSize="20"
                   FontWeight="Bold"
                   Content="Datenbytes"
                   BorderBrush="SteelBlue"
                   BorderThickness="0,0,0,3"
                   />
            <RichTextBox Margin="10"
                         VerticalScrollBarVisibility="Visible"
                         HorizontalScrollBarVisibility="Hidden"
                         FontSize="16">
                <FlowDocument>
                    <Paragraph>
                        <Run Foreground="DodgerBlue">0100 = Encoder</Run>
                        <LineBreak/>
                        <Run Foreground="LimeGreen">00010110 = Länge</Run>
                        <LineBreak/>
                        <Run Foreground="CornflowerBlue">01001000 = H</Run>
                        <LineBreak/>
                        <Run Foreground="DarkSlateBlue">01100001 = a</Run>
                        <LineBreak/>
                        <Run Foreground="CornflowerBlue">01101100 = l</Run>
                        <LineBreak/>
                        <Run Foreground="DarkSlateBlue">01101100 = l</Run>
                        <LineBreak/>
                        <Run Foreground="CornflowerBlue">01101111 = o</Run>
                        <LineBreak/>
                        <Run Foreground="DarkSlateBlue">00100000 = _</Run>
                        <LineBreak/>
                        <Run Foreground="CornflowerBlue">01010111 = w</Run>
                        <LineBreak/>
                        <Run Foreground="DarkSlateBlue">01100101 = e</Run>
                        <LineBreak/>
                        <Run Foreground="CornflowerBlue">01101100 = l</Run>
                        <LineBreak/>
                        <Run Foreground="DarkSlateBlue">01110100 = t</Run>
                        <LineBreak/>
                        <Run Foreground="CornflowerBlue">00101100 = _</Run>
                        <LineBreak/>
                        <Run Foreground="DarkSlateBlue">00100000 = w</Run>
                        <LineBreak/>
                        <Run Foreground="CornflowerBlue">01110111 = i</Run>
                        <LineBreak/>
                        <Run Foreground="DarkSlateBlue">01101001 = e</Run>
                        <LineBreak/>
                        <Run Foreground="CornflowerBlue">00101100 = _</Run>
                        <LineBreak/>
                        <Run Foreground="DarkSlateBlue">00100000 = G</Run>
                        <LineBreak/>
                        <Run Foreground="CornflowerBlue">01100111 = e</Run>
                        <LineBreak/>
                        <Run Foreground="DarkSlateBlue">01100101 = h</Run>
                        <LineBreak/>
                        <Run Foreground="CornflowerBlue">01101000 = t</Run>
                        <LineBreak/>
                        <Run Foreground="DarkSlateBlue">01110100 = s</Run>
                        <LineBreak/>
                        <Run Foreground="CornflowerBlue">01110011 = .</Run>
                        <LineBreak/> 
                        <Run Foreground="Orange">0000 = ENDE</Run>
                        <LineBreak/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            <Button Content="OK"
                    Width="80"
                    Height="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,20"
                    Click="CloseButton_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
