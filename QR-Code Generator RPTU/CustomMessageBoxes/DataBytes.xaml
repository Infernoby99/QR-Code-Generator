<Window x:Class="QR_Code_Generator_RPTU.DataBytes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:QR_Code_Generator_RPTU"
        mc:Ignorable="d"
        Title="DataBytes" Height="700" Width="250">
    <Grid>
        <StackPanel>
            <Label FontSize="20"
                   FontWeight="Bold"
                   Content="Datenbytes"
                   BorderBrush="SteelBlue"
                   BorderThickness="0,0,0,3"
                   />
            <RichTextBox Margin="10"
                         VerticalScrollBarVisibility="Visible"
                         HorizontalScrollBarVisibility="Hidden"
                         FontSize="16">
                <FlowDocument>
                    <Paragraph>
                        
                        <Run Foreground="DodgerBlue">Encoder => 0100</Run>
                        <LineBreak/>
                        <Run Foreground="LimeGreen">Länge => 00010110</Run>
                        <LineBreak/>
                        <Run Foreground="CornflowerBlue">H => 72 => 01001000</Run>
                        <LineBreak/>
                        <Run Foreground="DarkSlateBlue">a => 97 => 01100001</Run>
                        <LineBreak/>
                        <Run Foreground="CornflowerBlue">l => 108 => 01101100 </Run>
                        <LineBreak/>
                        <Run Foreground="DarkSlateBlue">l => 108 => 01101100</Run>
                        <LineBreak/>
                        <Run Foreground="CornflowerBlue">o => 111 => 01101111</Run>
                        <LineBreak/>
                        <Run Foreground="DarkSlateBlue">_* => 32 => 00100000 </Run>
                        <LineBreak/>
                        <Run Foreground="CornflowerBlue">W => 87 => 01010111</Run>
                        <LineBreak/>
                        <Run Foreground="DarkSlateBlue">e => 101 => 01100101</Run>
                        <LineBreak/>
                        <Run Foreground="CornflowerBlue">l => 108 => 01101100</Run>
                        <LineBreak/>
                        <Run Foreground="DarkSlateBlue">t => 116 => 01110100</Run>
                        <LineBreak/>
                        <Run Foreground="CornflowerBlue">_ => 32 => 00100000 </Run>
                        <LineBreak/>
                        <Run Foreground="DarkSlateBlue">w => 119 => 01110111</Run>
                        <LineBreak/>
                        <Run Foreground="CornflowerBlue">i => 105 => 01101001</Run>
                        <LineBreak/>
                        <Run Foreground="DarkSlateBlue">e => 101 => 01100101</Run>
                        <LineBreak/>
                        <Run Foreground="CornflowerBlue">_ => 32 => 00100000 </Run>
                        <LineBreak/>
                        <Run Foreground="DarkSlateBlue">G => 71 => 01000111 </Run>
                        <LineBreak/>
                        <Run Foreground="CornflowerBlue">e => 101 => 01100101</Run>
                        <LineBreak/>
                        <Run Foreground="DarkSlateBlue">h => 104 => 01101000</Run>
                        <LineBreak/>
                        <Run Foreground="CornflowerBlue">t => 116 => 01110100</Run>
                        <LineBreak/>
                        <Run Foreground="DarkSlateBlue">s => 115 => 01110011</Run>
                        <LineBreak/>
                        <Run Foreground="CornflowerBlue">. => 46 => 00101110</Run>
                        <LineBreak/> 
                        <Run Foreground="Orange">0000 => ENDE</Run>
                        <LineBreak/>
                        <Run>*( _ => Leerzeichen)</Run>
                        <LineBreak></LineBreak>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            <Button Content="OK"
                    Width="80"
                    Height="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,20"
                    Click="CloseButton_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
